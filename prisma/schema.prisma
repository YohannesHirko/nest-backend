generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  email String @unique
  hash String

  role String?

  firstName String?
  lastName String?

  posts Post[]

  @@map("users")
}

model Appointment {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  name String
  email String

  phone Int?
  clinic String?

  time String?
  problem String
  message String?
  @@map("appointments")
}

model Post {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())

  title String
  description String
  likes Int

  userId Int
  user User @relation(fields: [userId], references: [id])
}
